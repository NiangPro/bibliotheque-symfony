{% extends "base.html.twig" %}

{% block body %}
    <div class="container col-md-4">
        <h1 class="text-center">Mes informations</h1>
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Prenom :</h3>
            </div>
            <div class="col-md-6">
                <h5>{{ app.user.prenom }}</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Nom :</h3>
            </div>
            <div class="col-md-6">
                <h5>{{ app.user.nom }}</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Email :</h3>
            </div>
            <div class="col-md-6">
                <h5>{{ app.user.email }}</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Telephone :</h3>
            </div>
            <div class="col-md-6">
                <h5>{{ app.user.phone }}</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h3>Login :</h3>
            </div>
            <div class="col-md-6">
                <h5>{{ app.user.username }}</h5>
            </div>
        </div>
    </div>
{% endblock %}