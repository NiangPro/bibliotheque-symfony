{% extends "base.html.twig" %}
{% block title %}Info livre{% endblock %}
{% block body %}
    <div class="container col-md-10 mt-4">
        <h2 class="text-center">Information de {{ book.title }}</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="{{book.filename}}" alt="" width="350">
            </div>
            <div class="col-md-6 mt-4">
                <div class="row">
                    <div class="col-md-6"><h5>Collection :</h5> </div>
                    <div class="col-md-6">{{ book.collection }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6"><h5>Editeur : </h5></div>
                    <div class="col-md-6">{{ book.editeur }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6"><h5>Genre :</h5> </div>
                    <div class="col-md-6">{{ book.gender }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6"><h5>Nombre de pages :</h5> </div>
                    <div class="col-md-6">{{ book.countPage }} pages</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <a href="{{ book.document }}" class="btn btn-dark">Lire le pdf</a>
                    </div>
                    <div class="col-md-6"><a href="" class="btn btn-warning">Emprunter</a></div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}