{% extends 'base.html.twig' %}

{% block title %}Accueil - Ma biblio!{% endblock %}

{% block body %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/images/home/1.jpg" class="d-block w-100" alt="..." height="500">
    </div>
    <div class="carousel-item">
      <img src="/images/home/2.jpg" class="d-block w-100" alt="..." height="500">
    </div>
    <div class="carousel-item">
      <img src="/images/home/3.jpg" class="d-block w-100" alt="..." height="500">
    </div>
    <div class="carousel-item">
      <img src="/images/home/4.jpg" class="d-block w-100" alt="..." height="500">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<h2 class="text-center">Nouveautes</h2>
<div class="row jumbotron">
  {% for book in books %}
    <div class="col-md-3">
      <div class="card card-cascade">
        {% if app.user %}
        <a href="{{ path('infoBook', {id: book.id}) }}">        
          <img src="{{ book.filename }}" alt="" class="card-img-top" height="300">
        </a>
          {% else %}
          <img src="{{ book.filename }}" alt="" class="card-img-top" height="300">
          {% endif %}
          <div class="card-body card-body-cascade text-center">
            <h4 class="card-title">{{ book.title }}</h4>
            {% if app.user %}
            <p class="card-text">
                <a href="{{ book.document }}" class="btn btn-success">Commencez la lecture</a> 
            </p>
            {% endif %}
          </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
